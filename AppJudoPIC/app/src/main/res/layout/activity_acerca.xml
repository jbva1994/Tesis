<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Acerca">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/uce"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="JudoPIC"
                android:typeface="serif"
                android:textSize="18sp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1.0.0"
                android:typeface="serif"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Desarrolladores de la aplicación"
                android:typeface="serif"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/joel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Joel Bernardo Vargas Arcos"
                android:typeface="serif"
                android:textSize="20sp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Contacto: joel-v1994@hotmail.com"
                android:typeface="serif"
                android:textSize="15sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="180dip"
                android:layout_height="180dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/joel" />

            <TextView
                android:id="@+id/jose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="José Andrés Naranjo Samaniego"
                android:typeface="serif"
                android:textSize="20sp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Contacto: josenaranjo.50@hotmail.com"
                android:typeface="serif"
                android:textSize="15sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="180dip"
                android:layout_height="180dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/jose" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>